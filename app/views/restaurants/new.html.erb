<h1>Restaurants#new</h1>
<p>Find me in app/views/restaurants/new.html.erb</p>
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name, error: 'Name is mandatory, please specify one'%>
  <%= f.input :address, error: 'Address is mandatory, please specify one' %>
  <%= f.input :phone_number, error: 'Phone number is mandatory, please specify one' %>
  <%= f.input :category %>
  <%= f.submit "add a restaurant", class: "btn btn-primary" %>
<% end %>
